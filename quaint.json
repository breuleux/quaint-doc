{
    "templates": {
        "root": "templates"
    },
    "plugins": {
        "@breuleux/quaint-my-utils": {
            "defaultLanguage": null,
            "highlightTheme": "xcode",
            "language": "english"
        },
        "earlgrey": {
        },
        "smartypants": {
            "language": "english"
        },
        "quaint": {
            "preCompute": false
        },
        "look-nice": {
            "useNav": true,
            "useSide": true,
            "fonts": {
                "body": "g:Alegreya:400,400italic,700,700italic",
                "nav": "g:Exo 2:800,400"
            },
            "font-sizes": {
                "nav": "18px"
            },
            "borders": {
                "nav": "0px"
            },
            "widths": {
                "body": "750px",
                "sidebar": "250px"
            },
            "colors": {
                "link-visited": "rgb(85, 26, 139)"
            },
            "backgrounds": {
                "body": "#eee",
                "nav": "#5e2d0c",
                "table": "#fff",
                "table-odd": "#fff",
                "table-even": "#fff",
                "table-header": "#000"
            }
       }
    },
    "contentRoot": "content",
    "output": "output",
    "resources": {
        "root": "resources",
        "files": {
            "style.sass": "style/style.sass"
        }
    },
    "server": {
        "enable": true,
        "delay": 300,
        "port": 9991,
        "startPage": "index.html",
        "openBrowser": true
    },
    "files": ["assets"],
    "sources": ["**/*.q"],
    "hostname": "https://breuleux.github.io",
    "siteRoot": "quaint/",
    "saveMeta": "content/meta.json"
}
